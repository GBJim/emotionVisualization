<div class="row-fluid">
	<div class="col-md-8">
		<h1>Oscar Twitter Visualization</h1>
		<h2>The 2015 Oscars was awarded in 22nd Feb</h2>
		<%= form_tag(oscar_tweets_path, :method => :get) do %>
 	<div class="form-group">
		<%= label_tag(:q, "Search for:") %>
		<%= text_field_tag(:q) %>
	</div>
	<div class="form-group">
		<%= label_tag(:user, "Select partition date ") %>
		<%= date_field(:user, :born_on) %>
	</div>
	<%= submit_tag("Search", :class => "btn btn-primary") %>
<% end %>

	</div>
	<div class="col-md-3">
		<%=image_tag("oscars.jpg", :size => "300x200")%>
	</div>
</div>



<div id = "line-chart"></div>
<div class="row-fluid">
	<div class="col-md-4">
		<h3>Overall</h3>
		<div id = "pie-chart"></div>
	</div>
	<div class="col-md-4">
		<h3>Before <%=@date.to_date.to_s%></h3>
		<div id = "pie-chart-before"></div>
	</div>
	<div class="col-md-4">
		<h3>After <%=@date.to_date.to_s%></h3>
		<div id = "pie-chart-after"></div>
	</div>
</div>